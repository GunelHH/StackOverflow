@model List<Badge>

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card ">
                <div class="card-header">
                    <h4 class="card-title"> Badges Table</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table tablesorter " id="">
                            <thead class=" text-primary">
                                <tr>
                                    <th>
                                        Icon
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                </tr>
                            </thead>
                            @if (Model.Count() != 0)
                            {
                                <tbody>
                                    @foreach (Badge badge in Model)
                                    {
                                        <tr>
                                            <td>
                                                @badge.Icon
                                            </td>
                                            <td>
                                                @badge.Name
                                            </td>
                                            <td class="text-center" style="cursor:pointer">
                                                <a asp-area="admin" asp-controller="badge" asp-action="delete" asp-route-id="@badge.Id"> <i class="fa-regular fa-trash-can"></i></a>
                                            </td>
                                            <td class="text-center" style="cursor:pointer">
                                                <a asp-area="admin" asp-controller="badge" asp-action="update" asp-route-id="@badge.Id"><i class="fa-solid fa-pen"></i></a>
                                            </td>
                                        </tr>

                                    }
                                    <tr>
                                        <td><a asp-area="admin" asp-controller="badge" asp-action="create" class="btn btn-info">Create Badge</a> </td>
                                    </tr>
                                </tbody>
                            }
                            else
                            {
                                <tbody>
                                    <tr class="text-info"> <td>No Badges Yet</td> </tr>
                                    <tr>
                                        <td><a asp-area="admin" asp-controller="badge" asp-action="create" class="btn btn-info">Create Badge</a> </td>
                                    </tr>

                                </tbody>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

