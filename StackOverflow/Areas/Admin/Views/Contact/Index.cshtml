@model List<Contact>

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card ">
                <div class="card-header">
                    <h4 class="card-title"> Answer Table</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table tablesorter " id="">
                            <thead class=" text-primary">
                                <tr>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Message
                                    </th>
                                </tr>
                            </thead>
                            @if (Model.Count() != 0)
                            {
                                <tbody>
                                    @foreach (Contact contact in Model)
                                    {
                                        <tr>
                                            <td>
                                                @contact.reason
                                            </td>
                                            <td>
                                                @contact.email
                                            </td>
                                            <td>
                                                @contact.message
                                            </td>
                                            <td class="text-center" style="cursor:pointer">
                                                <a asp-area="admin" asp-controller="contact" asp-action="delete" asp-route-id="@contact.Id"> <i class="fa-regular fa-trash-can"></i></a>
                                            </td>
                                        </tr>

                                    }
                                   
                                </tbody>
                            }
                            else
                            {
                                <tbody>
                                    <tr class="text-info"> <td>No Message Yet</td> </tr>
                                 

                                </tbody>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




