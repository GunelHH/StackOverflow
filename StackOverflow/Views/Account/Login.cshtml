@model LoginVM
@if (!User.Identity.IsAuthenticated)
{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- Font -->

        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@300;400;500&family=Roboto:wght@300;400;500;700&family=Source+Sans+Pro:wght@200;300;400;600;700;900&display=swap"
              rel="stylesheet" />
        <link rel="shortcut icon"
              href="~/assets/Images/Logo/apple-touch-icon@2.png"
              type="image/x-icon" />
        <title>Log In - Stack Overflow</title>
        <link rel="stylesheet" href="~/assets/css/style.css" />
    </head>
    <body>
        <main>
            <div class="wrapper">
                <div class="wrapper__content">
                    <div class="wrapper__content__flex">
                        <div class="wrapper__content__flex__logo">
                            <a href="Index.html">
                                <iconify-icon icon="logos:stackoverflow-icon"></iconify-icon>
                            </a>
                        </div>
                        <div class="wrapper__content__flex__other-ways-to-login">
                            <button>
                                <iconify-icon icon="flat-color-icons:google"></iconify-icon> Log
                                in with Google
                            </button>
                            <button>
                                <iconify-icon icon="icon-park:github"></iconify-icon>Log in with
                                GitHub
                            </button>
                            <button>
                                <iconify-icon icon="uil:facebook"></iconify-icon>Log in with
                                Facebook
                            </button>
                        </div>
                        <div class="wrapper__content__flex__form-container">
                            <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                            <form method="post"
                                  class="wrapper__content__flex__form-container__form">
                                <div class="wrapper__content__flex__form-container__form__flex-item">
                                    <label for="email">Email</label>
                                    <div class="wrapper__content__flex__form-container__form__flex-item__input">
                                        <input asp-for="Email" size="30" maxlength="100" />
                                        <iconify-icon icon="ion:alert-circle"></iconify-icon>
                                    </div>
                                    <span asp-validation-for="Email" class="display-none wrapper__content__flex__form-container__form__flex-item--alert alert alert-danger"></span>
                                </div>
                                <div id="password"
                                     class="wrapper__content__flex__form-container__form__flex-item">
                                    <span asp-validation-for="Password" class="alert alert-danger wrapper__content__flex__form-container__form__flex-item__alert"></span>
                                    <div class="wrapper__content__flex__form-container__form__flex-item__input">
                                        <input asp-for="Password" size="30"
                                               maxlength="100" />
                                        <iconify-icon icon="ion:alert-circle"></iconify-icon>
                                    </div>
                                    <div class="wrapper__content__flex__form-container__form__flex-item__label">
                                        <label for="password">Password</label>
                                        <a asp-controller="account" asp-action="forgotpassword">Forgot password?</a>
                                    </div>
                                </div>
                                <div class="wrapper__content__flex__form-container__form__flex-item">
                                    <button type="submit">Log In</button>
                                    <span class="wrapper__content__flex__form-container__form__flex-item__alert display-none"></span>
                                </div>
                            </form>
                        </div>
                        <div class="wrapper__content__flex__Sign-up">
                            Don't have an account?
                            <a href="SignUp.html">Sign up</a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </body>
    <script src="~/assets/js/script.js"></script>

    <!-- Iconify -->
    <script src="https://code.iconify.design/iconify-icon/1.0.0-beta.3/iconify-icon.min.js"></script>
</html>


}