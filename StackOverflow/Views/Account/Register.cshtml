@model RegisterVM

@if (!User.Identity.IsAuthenticated)
{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- Font -->

        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@300;400;500&family=Roboto:wght@300;400;500;700&family=Source+Sans+Pro:wght@200;300;400;600;700;900&display=swap"
              rel="stylesheet" />
        <link rel="shortcut icon"
              href="~/assets/Images/Logo/apple-touch-icon@2.png"
              type="image/x-icon" />
        <title>Sign Up - Stack Overflow</title>

        <link rel="stylesheet" href="~/assets/css/style.css" />
    </head>
    <body>
        <main>
            <div class="wrapper">
                <div class="wrapper__content">
                    <div class="wrapper__content__body flex-md-col">
                        <div class="wrapper__content__body__left d-md-none">
                            <h1>Join the Stack Overflow community</h1>
                            <div class="wrapper__content__body__left--flex-item">
                                <div class="wrapper__content__body__left--flex-item__icon">
                                    <iconify-icon icon="mdi:message-question"></iconify-icon>
                                </div>
                                <div class="wrapper__content__body__left--flex-item__desc">
                                    Get unstuck — ask a question
                                </div>
                            </div>
                            <div class="wrapper__content__body__left--flex-item">
                                <div class="wrapper__content__body__left--flex-item__icon">
                                    <iconify-icon icon="emojione-monotone:up-down-arrow"></iconify-icon>
                                </div>
                                <div class="wrapper__content__body__left--flex-item__desc">
                                    Unlock new privileges like voting and commenting
                                </div>
                            </div>
                            <div class="wrapper__content__body__left--flex-item">
                                <div class="wrapper__content__body__left--flex-item__icon">
                                    <iconify-icon icon="icomoon-free:price-tags"></iconify-icon>
                                </div>
                                <div class="wrapper__content__body__left--flex-item__desc">
                                    Save your favorite tags, filters, and jobs
                                </div>
                            </div>
                            <div class="wrapper__content__body__left--flex-item">
                                <div class="wrapper__content__body__left--flex-item__icon">
                                    <iconify-icon icon="pepicons:trophy-print"></iconify-icon>
                                </div>
                                <div class="wrapper__content__body__left--flex-item__desc">
                                    Earn reputation and badges
                                </div>
                            </div>
                        </div>
                        <div class="wrapper__content__body__right">
                            <div class="wrapper__content__body__right__heading d-md-block">
                                Create your Stack Overflow account. It's free and only takes a
                                minute.
                            </div>
                            <div class="wrapper__content__flex__other-ways-to-login">
                                <button>
                                    <iconify-icon icon="flat-color-icons:google"></iconify-icon>
                                    Log in with Google
                                </button>
                                <button>
                                    <iconify-icon icon="icon-park:github"></iconify-icon>Log in
                                    with GitHub
                                </button>
                                <button>
                                    <iconify-icon icon="uil:facebook"></iconify-icon>Log in with
                                    Facebook
                                </button>
                            </div>
                            <div class="wrapper__content__flex__form-container">
                                <div style="color:red;" class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                                <form method="post"
                                      class="wrapper__content__flex__form-container__form">
                                    <div class="wrapper__content__flex__form-container__form__flex-item">
                                        <label for="display-name">Display name</label>
                                        <div class="wrapper__content__flex__form-container__form__flex-item__input">
                                            <input asp-for="UserName" />
                                            <iconify-icon icon="ion:alert-circle"></iconify-icon>
                                        </div>
                                        <div class="wrapper__content__flex__form-container__form__flex-item--success">
                                            <iconify-icon icon="akar-icons:circle-check-fill"></iconify-icon>
                                        </div>
                                        <div class="wrapper__content__flex__form-container__form__flex-item--error">
                                            <iconify-icon icon="bi:exclamation-circle-fill"></iconify-icon>
                                        </div>
                                        <span style="color:red;" asp-validation-for="UserName" id="p"
                                              class="wrapper__content__flex__form-container__form__flex-item--alert"></span>
                                    </div>
                                    <div class="wrapper__content__flex__form-container__form__flex-item">
                                        <label for="email">Email</label>
                                        <div class="wrapper__content__flex__form-container__form__flex-item__input">
                                            <input asp-for="Email" />
                                            <iconify-icon icon="ion:alert-circle"></iconify-icon>
                                        </div>
                                        <div class="wrapper__content__flex__form-container__form__flex-item--success">
                                            <iconify-icon icon="akar-icons:circle-check-fill"></iconify-icon>
                                        </div>
                                        <div class="wrapper__content__flex__form-container__form__flex-item--error">
                                            <iconify-icon icon="bi:exclamation-circle-fill"></iconify-icon>
                                        </div>
                                        <span style="color:red;" asp-validation-for="Email" id="p"
                                              class=" wrapper__content__flex__form-container__form__flex-item--alert"></span>
                                    </div>
                                    <div id="password"
                                         class="wrapper__content__flex__form-container__form__flex-item">
                                        <p class="wrapper__content__flex__form-container__form__flex-item__password-rule">
                                            Passwords must contain at least eight characters,
                                            including at least 1 letter and 1 number.
                                        </p>
                                        <span style="color:red;" asp-validation-for="Password" id="p"
                                              class=" wrapper__content__flex__form-container__form__flex-item--alert"></span>
                                        <div style="top: 28%"
                                             class="wrapper__content__flex__form-container__form__flex-item--success">
                                            <iconify-icon icon="akar-icons:circle-check-fill"></iconify-icon>
                                        </div>
                                        <div style="top: 25%"
                                             class="wrapper__content__flex__form-container__form__flex-item--error">
                                            <iconify-icon icon="bi:exclamation-circle-fill"></iconify-icon>
                                        </div>
                                        <div class="wrapper__content__flex__form-container__form__flex-item__input">
                                            <input asp-for="Password" />
                                            <iconify-icon icon="ion:alert-circle"></iconify-icon>
                                        </div>
                                        <div class="wrapper__content__flex__form-container__form__flex-item__label">
                                            <label for="pw">Password</label>
                                        </div>
                                    </div>
                                    <div class="wrapper__content__flex__form-container__form__flex-item"></div>
                                    <div class="wrapper__content__flex__form-container__form__flex-item">
                                        <button type="submit">Sign Up</button>
                                        <div class="wrapper__content__flex__form-container__form__flex-item--success">
                                            <iconify-icon icon="akar-icons:circle-check-fill"></iconify-icon>
                                        </div>
                                        <div class="wrapper__content__flex__form-container__form__flex-item--error">
                                            <iconify-icon icon="bi:exclamation-circle-fill"></iconify-icon>
                                        </div>
                                        <span class="wrapper__content__flex__form-container__form__flex-item__alert"></span>
                                    </div>
                                </form>
                                <div class="wrapper__content__flex__form-container__rule">
                                    By clicking “Sign up”, you agree to our
                                    <a href="" target="_blank">terms of service</a>,
                                    <a href="" target="_blank">privacy policy</a>,
                                    <a href="" target="_blank">cookie policy</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </body>
    <script src="~/assets/js/script.js"></script>
    <script src="~/assets/js/sections/sign-up.js"></script>

    <!-- Iconify -->
    <script src="https://code.iconify.design/iconify-icon/1.0.0-beta.3/iconify-icon.min.js"></script>
</html>
}